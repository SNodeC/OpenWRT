# ===================== Broker transports =====================
menu "mqttbroker transports"
    depends on PACKAGE_mqttsuite-mqttbroker

config MQTTSUITE_BROKER_TCP_IPV4
    bool "TCP (IPv4)"
    default y

config MQTTSUITE_BROKER_TLS_IPV4
    bool "SSL/TLS (IPv4)"
    depends on MQTTSUITE_BROKER_TCP_IPV4
    default y

config MQTTSUITE_BROKER_TCP_IPV6
    bool "TCP (IPv6)"
    default y

config MQTTSUITE_BROKER_TLS_IPV6
    bool "SSL/TLS (IPv6)"
    depends on MQTTSUITE_BROKER_TCP_IPV6
    default y

config MQTTSUITE_BROKER_UNIX
    bool "Unix domain sockets"
    default y

config MQTTSUITE_BROKER_UNIX_TLS
    bool "SSL/TLS (Unix domain sockets)"
    depends on MQTTSUITE_BROKER_UNIX
    default n

config MQTTSUITE_BROKER_WS
    bool "WebSocket"
    default y

config MQTTSUITE_BROKER_WSS
    bool "SSL/TLS (WebSocket)"
    depends on MQTTSUITE_BROKER_WS
    default y
endmenu

